{{#if rooms.length}}
	{{#each rooms as |rooms__item rooms__key|}}
		{{#unless rooms__item.private}}
			<a data-func="webrtc.joinRoom" data-room="{{rooms__item.slug}}" href="#" class="list-group-item">
				<h4 class="list-group-item-heading">{{rooms__item.name}}</h4>
				<p class="list-group-item-text">{{rooms__item.description}}</p>
			</a>
		{{/unless}}
	{{/each}}
{{else}}
	<a data-func="webrtc.newRoom" href="#" class="list-group-item">
		<h4 class="list-group-item-heading">No rooms currently available!</h4>
		<p class="list-group-item-text">Click here to create one!</p>
	</a>
{{/if}}