<h3>{{esc header}}</h3>
<ul>
{{#each items as |items__item items__key|}}
{{#if @first}}
	<li>
		<strong>{{esc items__item.name}}</strong>
	</li>
	{{else}}
	<li>
		{{#if items__item.link}}<a href="{{esc items__item.url}}">{{/if}}{{esc items__item.name}}{{#if items__item.link}}</a>{{/if}}
	</li>
{{/if}}
{{/each}}
</ul>

{{#if something}}
	<p>do something!</p>
{{/if}}